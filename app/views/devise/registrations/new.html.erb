<h2><%= t ".title" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t(".name") %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label t(".phone_number") %><br />
    <%= f.phone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label t(".email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t(".password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t ".minium" %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t(".password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t(".submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-social btn-facebook" do %>
  <span class="fa fa-facebook"></span> <%= t ".facebook" %>
<% end %>
<%= link_to user_twitter_omniauth_authorize_path, class: "btn btn-block btn-social btn-twitter" do %>
  <span class="fa fa-twitter"></span> <%= t ".twitter" %>
<% end %>
<%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-block btn-social btn-google" do %>
  <span class="fa fa-google"></span> <%= t ".google" %>
<% end %>
